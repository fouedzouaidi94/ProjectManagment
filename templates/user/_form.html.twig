{{ form_start(form, {'attr':{'novalidate': 'novalidate' }}) }}
  <div class="form-group"> {{ form_row(form.username) }} </div>
  <div class="form-group"> {{ form_row(form.firstName) }} </div>
  <div class="form-group"> {{ form_row(form.lastName) }} </div>
  <div class="form-group"> {{ form_row(form.email) }} </div>
  <div class="form-group"> {{ form_row(form.cin) }} </div>

      {# {% if (AdminOrNot)%}
         <div class="form-group">  {{ form_row(form.roles) }} </div>
      {% else %}   #}
      <div class="form-group">  {{ form_row(form.roles, { 'attr':{'disabled':'disabled'} }) }} </div>
    {# {% endif %} #}
  <div class="form-group"> {{ form_row(form.password) }} </div>
<button class="btn">{{ button_label|default('Save') }}</button> 
{{ form_end(form) }}

