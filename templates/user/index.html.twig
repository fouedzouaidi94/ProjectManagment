{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>UserName</th>
                <th>FirstName</th>
                <th>LastName</th>
                {# <th>Cin</th> #}
                <th>Role</th>
                <th>Email</th>
                {# <th>Motpasse</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {# <td>{{ user.id }}</td> #}
                <td>{{ user.username }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                {# <td>{{ user.cin }}</td> #}
                {% for role in user.roles %}
                    <td>{{ role }}, </td>
                {% endfor %}
                <td>{{ user.email }}</td>
                {# <td>{{ user.motpasse }}</td> #}
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if (AdminOrNot)%}
        <a href="{{ path('user_new') }}">Create new</a>
    {% endif %}
    
        <a href="{{ path('home_page') }}">Index</a>
{% endblock %}
